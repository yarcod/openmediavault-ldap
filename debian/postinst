set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

case "$1" in
	configure)
		########################################################################
		# Set the default settings of the LDAP package to those expected by
		# OpenMediaVault.
		########################################################################
		if [ -z "$2" ]; then
			echo "Updating system environment ..."
			pam-auth-update --force --package --remove ldap
		fi

		########################################################################
		# Update the configuration.
		# <config>
		#   <services>
		#     <ldap>
		#       <enable>0</enable>
		#       <host></host>
		#       <port>389</port>
		#       <enablessl>0</enablessl>
		#       <base></base>
		#       <rootbinddn></rootbinddn>
		#       <rootbindpw></rootbindpw>
		#       <usersuffix></usersuffix>
		#       <groupsuffix></groupsuffix>
		#       <enablepam>0|1</enablepam>
		#       <extraoptions></extraoptions>
		#       <extraclientoptions></extraclientoptions>
		#     </ldap>
		#   </services>
		# </config>
		########################################################################
		if ! omv_config_exists "/config/services/ldap"; then
			echo "Initialize configuration"
			object="<enable>0</enable>"
			object="${object}<host></host>"
			object="${object}<port>389</port>"
			object="${object}<enablessl>0</enablessl>"
			object="${object}<base></base>"
			object="${object}<rootbinddn></rootbinddn>"
			object="${object}<rootbindpw></rootbindpw>"
			object="${object}<usersuffix>ou=Users</usersuffix>"
			object="${object}<groupsuffix>ou=Groups</groupsuffix>"
			object="${object}<enablepam>1</enablepam>"
			object="${object}<extraoptions></extraoptions>"
			object="${object}<extraclientoptions></extraclientoptions>"
			omv_config_add_element "/config/services" "ldap" "${object}" true
		fi

		########################################################################
		# Activate package triggers. These triggers are only set during the
		# package installation.
		########################################################################
		dpkg-trigger update-fixperms
		dpkg-trigger update-locale

		########################################################################
		# Action to be done depending on the previous version.
		########################################################################
		echo "Updating configuration ..."
		if dpkg --compare-versions "$2" lt-nl "1.0.3"; then
			omv_config_add_element "/config/services/ldap" "enablessl" "0"
		fi
		if dpkg --compare-versions "$2" lt-nl "2.0"; then
			omv_config_add_element "/config/services/ldap" "enablepam" "1"
			omv_config_add_element "/config/services/ldap" "extraclientoptions" ""
		fi
	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument '$1'" >&2
		exit 1
	;;
esac

exit 0
